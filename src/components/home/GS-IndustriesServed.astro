---
import { Image } from "astro:assets";
import Product1 from "@assets/gs-bg1.png"; // ตรวจสอบว่าไฟล์นี้มีอยู่จริง

interface Industry {
  title: string;
  image: any;
  description: string;
  features: string[];
  href: string;
}

const industries: Industry[] = [
  {
    title: "Healthcare & Pharma",
    image: Product1,
    description:
      "Temperature-controlled storage, compliance management, and specialized handling for medical supplies and pharmaceuticals.",
    features: [
      "Cold chain logistics",
      "Regulatory compliance",
      "Sterile manufacturing",
    ],
    href: "/",
  },
  {
    title: "Technology & Electronics",
    image: Product1,
    features: [
      "ESD-safe facilities",
      "Component assembly",
      "Global distribution",
    ],
    href: "/",
  },
  {
    title: "E-commerce & Retail",
    image: Product1,
    description:
      "Scalable fulfillment, same-day delivery options, and returns management for modern retail operations.",
    features: [
      "Order fulfillment",
      "Peak season support",
      "Returns processing",
    ],
    href: "/",
  },
  {
    title: "Automotive",
    image: Product1,
    description:
      "Just-in-time delivery, parts manufacturing, and supply chain optimization for automotive production lines.",
    features: ["JIT manufacturing", "Parts logistics", "Quality assurance"],
    href: "/",
  },
  {
    title: "Food & Beverage",
    image: Product1,
    description:
      "Cold storage, food safety compliance, and specialized handling for perishable goods and beverages.",
    features: [
      "Temperature control",
      "HACCP compliance",
      "Fast-track delivery",
    ],
    href: "/",
  },
  {
    title: "Aerospace & Defense",
    image: Product1,
    description:
      "Precision manufacturing, secure logistics, and compliance management for aerospace and defense applications.",
    features: ["Secure facilities", "Precision components", "ITAR compliance"],
    href: "/",
  },
];

const checkmarkPath =
  "M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z";
---

<section class="py-24 bg-linear-to-b from-slate-50 to-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <div
        class="inline-block px-4 py-2 mb-4 bg-blue-100 text-blue-800 text-sm font-semibold rounded-full"
      >
        ผลิตภัณฑ์
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6">
        ผลิตภัณฑ์ <span
          class="text-transparent bg-clip-text bg-linear-to-r from-blue-600 to-teal-600"
          >เครื่องวัดความชื้นเมล็ดพืช/เมล็ดวัสดุ</span
        >
      </h2>
      <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
        Grainsure มีเครื่องวัดความชื้นเมล็ดหลากหลายรุ่น ครอบคลุมทุกการใช้งาน เพื่อให้เหมาะสมกับความต้องการของลูกค้าแต่ละราย ใช้ได้ทั้งในห้องปฏิบัติการและภาคสนาม
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        industries.map((item) => (
          /* เพิ่ม relative เพื่อให้ลิงก์ล่องหนอ้างอิงตำแหน่งได้ */
          <div class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all hover:-translate-y-2 border border-slate-100 flex flex-col relative">
            <a
              href={item.href}
              class="absolute inset-0 z-10"
              aria-label={`อ่านรายละเอียดของ ${item.title}`}
            />

            <div class="relative h-64 overflow-hidden bg-slate-100">
              <Image
                src={item.image}
                alt={item.title}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              />
              <div class="absolute top-4 right-4 bg-blue-600 text-white text-xs font-bold px-3 py-1 rounded-full shadow-lg z-20">
                Best Seller
              </div>
            </div>

            <div class="p-8 flex-grow flex flex-col">
              <h3 class="text-2xl font-bold text-slate-900 mb-3 group-hover:text-blue-600 transition-colors">
                {item.title}
              </h3>
              <p class="text-slate-600 leading-relaxed mb-6">
                {item.description}
              </p>

              <div class="border-t border-slate-100 pt-6 flex-grow">
                <ul class="space-y-3 text-sm text-slate-600 mb-8">
                  {item.features.map((feature) => (
                    <li class="flex items-start">
                      <svg
                        class="w-5 h-5 text-emerald-500 mr-2 shrink-0"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path
                          fill-rule="evenodd"
                          d={checkmarkPath}
                          clip-rule="evenodd"
                        />
                      </svg>
                      <span>{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <div class="mt-auto flex items-center text-blue-600 font-bold text-sm">
                ดูรายละเอียดสินค้า
                <svg
                  class="w-4 h-4 ml-2 transition-transform group-hover:translate-x-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"
                  />
                </svg>
              </div>
            </div>
          </div>
        ))
      }
    </div>
    <!-- Bottom CTA -->
    <div class="text-center mt-16">
      <a
        href="/use-cases"
        class="inline-flex items-center px-8 py-4 text-base font-semibold text-white bg-linear-to-r from-blue-600 to-teal-600 hover:from-blue-700 hover:to-teal-700 rounded-lg shadow-lg hover:shadow-xl transition-all group"
      >
        View Industry Solutions
        <svg
          class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
