---
import { Image } from "astro:assets";
import techDashboardImg from "@assets/gs-banner2.png";

interface Technology {
  title: string;
  description: string;
  iconGradient: string;
  iconPath: string;
}

const technologies: Technology[] = [
  {
    title: "เที่ยงตรง แม่นยำ ใช้งานง่าย",
    description:
      "ทุกเครื่องผ่านการสอบเที่ยบตามมาตรฐาน เพื่อความแม่นยำสูงสุดในการวัดความชื้นเมล็ดพืชและวัสดุชนิดเม็ดตามที่ลูกค้ากำหนด ใช้งานง่ายเพียงไม่กี่ขั้นตอน พร้อมวัดผลได้ทันที",
    iconGradient: "from-blue-500 to-blue-600",
    iconPath:
      "M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10zm0-4a6 6 0 1 0 0-12 6 6 0 0 0 0 12zm0-4a2 2 0 1 0 0-4 2 2 0 0 0 0 4z",
  },
  {
    title: "ทนทาน ทุกสภาพการใช้งาน",
    description:
      "ตัวเครื่องทำจากเหล็ก ทนแรงกระแทก ทนทานต่อสภาพแวดล้อมการใช้งานที่หลากหลาย ทั้งในโรงงาน คลังสินค้า และภาคสนาม รองรับการใช้งานหนักได้อย่างมั่นใจ",
    iconGradient: "from-teal-500 to-teal-600",
    iconPath: "M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10zM12 8v9M8 12l8 0",
  },
  {
    title: "ซื้อครั้งเดียว ดูแลยาวๆ",
    description:
      "บริการหลังการขายโดยทีมงานมืออาชีพ พร้อมให้คำปรึกษาและดูแลเครื่องวัดความชื้นของคุณอย่างต่อเนื่อง เพื่อให้มั่นใจว่าเครื่องของคุณจะทำงานได้อย่างเต็มประสิทธิภาพตลอดเวลา",
    iconGradient: "from-blue-500 to-blue-600",
    iconPath:
      "M12 21l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.18L12 21z",
  },
  {
    title: "ราคาย่อมเยา คุ้มค่า จับต้องได้",
    description:
      "ราคาขายเพื่อการเกษตรที่เข้าถึงได้ง่ายด้วยคุณภาพ และความแม่นยำเทียบเท่าเครื่องจากต่างประเทศ",
    iconGradient: "from-teal-500 to-teal-600",
    iconPath:
      "M15.5 14h.01M7 7h.01M4.6 11l5.8-5.8a2 2 0 012.8 0l6.2 6.2a2 2 0 010 2.8l-5.8 5.8a2 2 0 01-2.8 0l-6.2-6.2a2 2 0 010-2.8z",
  },
  {
    title: "รับผลิต พิเศษเฉพาะ ตามความต้องการลูกค้า",
